# Environment Configuration for Swift Logistics Orchestrator
# Copy this file to .env and update the values as needed

# -----------------------------
# Server Configuration
# -----------------------------
SERVER_PORT=8000
APPLICATION_NAME=orchestrator

# -----------------------------
# MongoDB Configuration
# -----------------------------
# Use MongoDB URI format for connection
# Examples:
# Atlas: mongodb+srv://username:password@cluster.mongodb.net/cmsdb
MONGODB_URI=mongodb://localhost:27017/cmsdb

# -----------------------------
# RabbitMQ Configuration
# -----------------------------
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USERNAME=guest
RABBITMQ_PASSWORD=guest

# -----------------------------
# Logging Configuration
# -----------------------------
LOGGING_LEVEL_MESSAGING=DEBUG
LOGGING_LEVEL_WEBSOCKET=DEBUG
